<h1>New user</h1>

<%= form_for(@user) do |f| %>

<p><%=f.label :name, "Name" %></p>
<p><%=f.text_field :name %></p>

<p><%=f.label :password%></p>
<p><%=f.password_field :password%>

<p><%=f.label :height, "Height (in inches)" %></p>
<p><%=f.number_field :height%></p>

<p><%=f.label :happiness, "How happy are you? (1-5 scale)" %></p>
<p><%=f.number_field :happiness%></p>

<p><%=f.label :nausea, "How nauseous are you? (1-5 scale)" %></p>
<p><%=f.number_field :nausea%></p>

<p><%=f.label :tickets, "How many dollars are in your pocket?" %></p>
<p><%=f.number_field :tickets %></p>

<p><%=f.label :admin, "Check box if you are a theme park owner" %></p>
<%#=check_box_tag "admin", true, false%>
<%#=f.check_box :admin%>
ADMIN
<p id="user_admin"><%=check_box_tag :admin%></p>

<p><%#=f.check_box :admin%></p>
<p><%=f.submit%></p>


<%end%>
<%=link_to "Back", "/"%>
